{{#each this.modals._stack as |modal index|}}
  <div
    class="epm-backdrop {{if modal.isClosing 'epm-out'}}"
    tabindex="-1"
    role="presentation"
    aria-hidden="true"
    data-test-epm-backdrop="{{index}}"
  />
  <div class="epm-modal-container">
    <EpmModal @modal={{modal}} data-test-epm-modal="{{index}}" />
  </div>
{{/each}}