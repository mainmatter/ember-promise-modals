{
  "name": "ember-promise-modals",
  "version": "5.0.0",
  "description": "The better way to handle modals in your Ember.js apps.",
  "keywords": [
    "ember-addon"
  ],
  "repository": "https://github.com/mainmatter/ember-promise-modals",
  "license": "MIT",
  "author": "Mainmatter GmbH",
  "directories": {
    "doc": "doc",
    "test": "tests"
  },
  "exports": {
    ".": "./dist/index.js",
    "./*": "./dist/*",
    "./test-support": "./dist/test-support/index.js",
    "./addon-main.cjs": "./addon-main.cjs"
  },
  "files": [
    "addon-main.cjs",
    "dist"
  ],
  "scripts": {
    "build": "rollup --config",
    "format": "prettier . --cache --write",
    "lint": "concurrently \"pnpm:lint:*(!fix)\" --names \"lint:\" --prefixColors auto --group",
    "lint:fix": "concurrently \"pnpm:lint:*:fix\" --names \"fix:\" --prefixColors auto --group && pnpm run format",
    "lint:format": "prettier . --cache --check",
    "lint:hbs": "ember-template-lint . --no-error-on-unmatched-pattern",
    "lint:hbs:fix": "ember-template-lint . --fix --no-error-on-unmatched-pattern",
    "lint:js": "eslint . --cache",
    "lint:js:fix": "eslint . --fix",
    "prepack": "rollup --config",
    "start": "rollup --config --watch"
  },
  "ember-addon": {
    "main": "addon-main.cjs",
    "type": "addon",
    "version": 2,
    "app-js": {
      "./components/epm-modal-container.js": "./dist/_app_/components/epm-modal-container.js",
      "./components/epm-modal.js": "./dist/_app_/components/epm-modal.js",
      "./helpers/open-modal.js": "./dist/_app_/helpers/open-modal.js",
      "./services/modals.js": "./dist/_app_/services/modals.js"
    }
  },
  "dependencies": {
    "@ember/test-waiters": "^3.0.2",
    "@embroider/addon-shim": "^1.8.7",
    "@embroider/util": "^1.13.3",
    "@glimmer/tracking": "^1.1.2",
    "decorator-transforms": "^2.0.0",
    "ember-modifier": "4.2.2",
    "focus-trap": "^7.0.0"
  },
  "devDependencies": {
    "@babel/core": "7.28.0",
    "@babel/eslint-parser": "7.28.0",
    "@babel/plugin-proposal-decorators": "7.28.0",
    "@babel/plugin-transform-class-properties": "7.27.1",
    "@babel/runtime": "7.25.6",
    "@ember/test-helpers": "5.2.2",
    "@embroider/addon-dev": "8.1.0",
    "@eslint/js": "9.31.0",
    "@glimmer/component": "1.1.2",
    "@ianvs/prettier-plugin-sort-imports": "^4.5.1",
    "@rollup/plugin-babel": "6.0.4",
    "babel-plugin-ember-template-compilation": "2.2.5",
    "concurrently": "9.2.0",
    "ember-source": "4.12.4",
    "ember-template-lint": "7.9.1",
    "eslint": "9.31.0",
    "eslint-config-prettier": "10.1.5",
    "eslint-plugin-ember": "12.5.0",
    "eslint-plugin-import": "2.32.0",
    "eslint-plugin-n": "17.21.0",
    "eslint-plugin-promise": "7.2.1",
    "eslint-plugin-qunit": "8.2.3",
    "globals": "16.3.0",
    "prettier": "3.6.2",
    "prettier-plugin-ember-template-tag": "^2.0.6",
    "rollup": "4.45.0",
    "rollup-plugin-copy": "3.5.0",
    "webpack": "5.100.1"
  },
  "peerDependencies": {
    "@ember/test-helpers": "^3.0.0 || ^5.0.0"
  },
  "engines": {
    "node": ">= 18.*"
  },
  "ember": {
    "edition": "octane"
  }
}
